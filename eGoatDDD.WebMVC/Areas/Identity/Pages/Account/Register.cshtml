@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<h2>@ViewData["test"]</h2>

<div class="row">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <h4>Role</h4>
                @foreach (string item in (List<string>)ViewData["Roles"])
                {
                    var _checked = String.Empty;

                    if (item == "Lessee")
                    {
                        _checked = "checked='checked'";
                    }


                    <div class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label>
                            <input class="form-control" id="Input.Role" name="Input.Role" type="radio" value="@item" @_checked /> @item
                        </label>

                        <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 small">
                            @switch (item)
                            {
                                case "Lender":
                                    <span>Provides the loanable resources</span>
                                    break;
                                default:
                                    <span>Needs the resources</span>
                                    break;
                            }
                        </div>
                    </div>
                }

            </div>

            <div class="row">
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.FirstName" required class="form-control" placeholder="First Name" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.MiddleName" required class="form-control" placeholder="Middle Name" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.LastName" required class="form-control" placeholder="Last Name" />
                </div>
            </div>

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>

        </div>
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <h3>Address</h3>
            <div class="row">
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.HomeAddress" class="form-control" placeholder="Address" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.HomeCity" class="form-control" placeholder="City" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.HomeRegion" class="form-control" placeholder="Region" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.HomeCountryCode" class="form-control" placeholder="Country" />
                </div>
                <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <input asp-for="Input.HomePhone" class="form-control" placeholder="Phone" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
