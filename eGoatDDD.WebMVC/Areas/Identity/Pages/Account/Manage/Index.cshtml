@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@Html.PartialAsync("_StatusMessage", Model.StatusMessage)


<form id="profile-form" method="post">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    
    <div class="row">
       
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <input asp-for="Input.Role" class="form-control" readonly />
            </div>
            <div class="form-group">

                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-7 small">
            <div class="row">
                <h4>Name</h4>

                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.FirstName" class="form-control" placeholder="First Name" /></div>
                </div>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.MiddleName" class="form-control" placeholder="Middle Name" /></div>
                </div>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.LastName" class="form-control" placeholder="Last Name" /></div>
                </div>

                <h4>Address</h4>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.HomeAddress" class="form-control" placeholder="Home Address" /></div>
                </div>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.HomeCity" class="form-control" placeholder="Home City" /></div>
                </div>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.HomeRegion" class="form-control" placeholder="Home Region" /></div>
                </div>
                <div class="col col-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <div class="form-group"><input asp-for="Input.HomeCountryCode" class="form-control" placeholder="Country" /></div>
                </div>
            </div>


        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
