@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col col-12 col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <input asp-for="Input.FirstName" required class="form-control" placeholder="First Name" />
                    </div>
                    <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <input asp-for="Input.MiddleName" required class="form-control" placeholder="Middle Name" />
                    </div>
                    <div class="col col-4 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <input asp-for="Input.LastName" required class="form-control" placeholder="Last Name" />
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>

        </div>
        
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
